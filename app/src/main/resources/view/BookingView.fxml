<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.studiobooking.controller.BookingController"
      spacing="15" alignment="TOP_CENTER" style="-fx-padding: 25; -fx-background-color: #f0f3f5;" prefWidth="450" prefHeight="550">

    <!-- Titolo -->
    <Label fx:id="studioLabel" text="Prenotazione Studio" 
           style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <!-- Descrizione dello studio -->
    <Label fx:id="studioDescriptionLabel" text="Descrizione studio..." 
       wrapText="true" maxWidth="400" 
       style="-fx-font-size: 14px; -fx-text-fill: #555; -fx-alignment: center;">
        <padding>
            <Insets top="0" right="10" bottom="0" left="10"/>
        </padding>
    </Label>

    <Separator prefWidth="400"/>

    <!-- Selezione giorno -->
    <VBox spacing="5" alignment="CENTER_LEFT">
        <Label text="Seleziona il giorno:" style="-fx-font-size: 13px;"/>
        <DatePicker fx:id="datePicker" prefWidth="200"/>
    </VBox>

    <!-- Selezione fascia oraria -->
    <VBox spacing="5" alignment="CENTER_LEFT">
        <Label text="Seleziona la fascia oraria:" style="-fx-font-size: 13px;"/>
        <ComboBox fx:id="timeSlotComboBox" prefWidth="200"/>
    </VBox>

    <!-- Selezione attrezzatura -->
    <VBox spacing="5" alignment="CENTER_LEFT">
        <Label text="Seleziona attrezzatura disponibile:" style="-fx-font-size: 13px;"/>
        <ListView fx:id="equipmentListView" prefHeight="150" prefWidth="300" 
                  style="-fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5;"/>
    </VBox>

    <HBox spacing="20" alignment="CENTER">
        <Button fx:id="confirmButton" text="Conferma Prenotazione" 
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 8 15 8 15;"/>
        <Button fx:id="backButton" text="Torna alla Home" 
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-weight: bold; -fx-padding: 8 15 8 15;"/>
    </HBox>

</VBox>
