      fx:controller="com.example.studiobooking.controller.LoginController" style="-fx-padding: 20;">
    <Label text="Login" style="-fx-font-size: 24px;" />
    <TextField fx:id="emailField" promptText="Email" />
    <PasswordField fx:id="passwordField" promptText="Password" />
    <Button text="Accedi" fx:id="loginButton" />
    <Button text="Registrati" fx:id="registerButton" />
</VBox>
