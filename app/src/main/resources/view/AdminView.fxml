<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.studiobooking.controller.AdminController"
      spacing="20" alignment="TOP_CENTER" style="-fx-padding: 20; -fx-background-color: #f5f5f5;">

    <!-- Titolo -->
    <Label text="PANNELLO DI CONTROLLO ADMIN"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2a4d7a;"/>

        <Label fx:id="welcomeLabel" style="-fx-font-size: 18; -fx-font-weight: bold;" />

    <!-- Sezione principale con due colonne -->
    <HBox spacing="30" alignment="TOP_CENTER">

        <!-- Colonna sinistra: Prenotazioni -->
        <VBox spacing="10" alignment="TOP_CENTER" style="-fx-background-color: #ffffff; -fx-padding: 15; -fx-border-color: #cccccc; -fx-border-radius: 5;">
            <Label text="Prenotazioni" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <ListView fx:id="bookingsListView" prefWidth="400" prefHeight="450"/>
            <HBox spacing="10">
                <Button fx:id="addBookingButton" text="Aggiungi"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white;"
                        onAction="#addBooking"/>
                <Button fx:id="editBookingButton" text="Modifica"
                        style="-fx-background-color: #FF9800; -fx-text-fill: white;"
                        onAction="#editBooking"/>
                <Button fx:id="deleteBookingButton" text="Rimuovi"
                        style="-fx-background-color: #f44336; -fx-text-fill: white;"
                        onAction="#deleteBooking"/>
            </HBox>
        </VBox>

        <VBox spacing="10" alignment="TOP_CENTER" style="-fx-background-color: #ffffff; -fx-padding: 15; -fx-border-color: #cccccc; -fx-border-radius: 5;">
    <Label text="Gestione Attrezzatura" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
    <ListView fx:id="equipmentListView" prefWidth="300" prefHeight="250"/>
    <HBox spacing="10">
        <Button fx:id="addEquipmentButton" text="Aggiungi"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"
                onAction="#addEquipment"/>
        <Button fx:id="toggleEquipmentButton" text="Attiva/Disattiva"
                style="-fx-background-color: #FF9800; -fx-text-fill: white;"
                onAction="#toggleEquipment"/>
        <Button fx:id="deleteEquipmentButton" text="Elimina"
                style="-fx-background-color: #f44336; -fx-text-fill: white;"
                onAction="#deleteEquipment"/>
    </HBox>

    <!-- Sezione Creazione Admin -->
    <VBox spacing="10" alignment="TOP_CENTER" style="-fx-padding: 15; -fx-border-color: #cccccc; -fx-border-radius: 5; -fx-background-color: #f9f9f9;">
        <Label text="Crea un nuovo Admin" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        <TextField fx:id="adminNameField" promptText="Nome completo" prefWidth="250"/>
        <TextField fx:id="adminEmailField" promptText="Email" prefWidth="250"/>
        <PasswordField fx:id="adminPasswordField" promptText="Password" prefWidth="250"/>
        <Button fx:id="createAdminButton" text="Crea Admin" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
    </VBox>

</VBox>

    </HBox>
</VBox>