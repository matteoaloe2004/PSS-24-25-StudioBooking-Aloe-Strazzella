<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.studiobooking.controller.LoyaltyCardController"
      fx:id="loyaltyCardVBox"
      spacing="8"
      alignment="CENTER"
      style="-fx-background-color: #34495e; -fx-padding: 15; -fx-border-color: #2c3e50; -fx-border-width: 2px; -fx-border-radius: 8px;">

    <Label text="Loyalty Card" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;"/>
    <Label fx:id="loyaltyBookingsLabel" text="Prenotazioni totali: 0" style="-fx-font-size: 16px; -fx-text-fill: white;"/>
    <Label fx:id="loyaltyDiscountLabel" text="Sconto: 0%" style="-fx-font-size: 16px; -fx-text-fill: white;"/>

</VBox>
