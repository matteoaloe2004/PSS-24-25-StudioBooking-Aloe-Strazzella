<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.studiobooking.controller.UserController">

    <!-- Header -->
    <top>
        <HBox spacing="10" padding="10">
            <Label fx:id="welcomeLabel" text="Benvenuto, Utente!" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="logoutButton" text="Logout" />
        </HBox>
    </top>

    <!-- Center: Lista prenotazioni -->
    <center>
        <VBox spacing="10" padding="10">
            <Label text="Le tue prenotazioni:" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
            <ListView fx:id="bookingsListView" prefHeight="400" />
        </VBox>
    </center>

    <!-- Bottom: Azioni -->
    <bottom>
        <HBox spacing="10" padding="10">
            <Button fx:id="newBookingButton" text="Nuova Prenotazione" />
            <Button fx:id="editBookingButton" text="Modifica Prenotazione" />
            <Button fx:id="deleteBookingButton" text="Cancella Prenotazione" />
        </HBox>
    </bottom>

</BorderPane>
