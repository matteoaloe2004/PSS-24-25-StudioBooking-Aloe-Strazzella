<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.studiobooking.controller.AdminController"
      spacing="20" alignment="TOP_CENTER" style="-fx-padding: 20;">

    <!-- Titolo -->
    <Label text="Pannello Admin"
           style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2a4d7a;"/>

    <!-- Sezione Gestione Studi e Prenotazioni -->
    <HBox spacing="30" alignment="TOP_CENTER">

        <!-- Colonna Studi -->
        <VBox spacing="10" alignment="TOP_CENTER">
            <Label text="Gestione Studi" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <ListView fx:id="studiosListView" prefWidth="200" prefHeight="200"/>
            <HBox spacing="10">
                <Button fx:id="enableStudioButton" text="Abilita" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                <Button fx:id="disableStudioButton" text="Disabilita" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
            </HBox>
        </VBox>

        <!-- Colonna Prenotazioni -->
        <VBox spacing="10" alignment="TOP_CENTER">
            <Label text="Prenotazioni" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <ListView fx:id="bookingsListView" prefWidth="250" prefHeight="250"/>
        </VBox>

    </HBox>

    <!-- Sezione Creazione Admin -->
    <VBox spacing="10" alignment="TOP_CENTER" style="-fx-padding: 15; -fx-border-color: #cccccc; -fx-border-radius: 5; -fx-background-color: #f9f9f9;">
        <Label text="Crea un nuovo Admin" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        <TextField fx:id="adminNameField" promptText="Nome completo" prefWidth="250"/>
        <TextField fx:id="adminEmailField" promptText="Email" prefWidth="250"/>
        <PasswordField fx:id="adminPasswordField" promptText="Password" prefWidth="250"/>
        <Button fx:id="createAdminButton" text="Crea Admin" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
    </VBox>

</VBox>
