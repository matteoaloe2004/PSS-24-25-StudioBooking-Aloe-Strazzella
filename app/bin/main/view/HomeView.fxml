<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.studiobooking.controller.HomeController" prefWidth="600" prefHeight="600">
    <!-- Top: Benvenuto e pulsanti Login/Register -->
    <top>
        <VBox spacing="10" alignment="CENTER" style="-fx-padding: 20; -fx-background-color: #2c3e50;">
            <Label fx:id="welcomeLabel" text="Benvenuto su Studio Booking!" style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;" />
            <HBox spacing="15" alignment="CENTER">
                <Button fx:id="loginButton" text="Login" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20 10 20;"/>
                <Button fx:id="registerButton" text="Registrati" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20 10 20;"/>
                <Button fx:id="logoutButton" text="Logout" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" visible="false"/>
            </HBox>
        </VBox>
    </top>

    <!-- Center: Lista studi -->
    <center>
        <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-width: 2px; -fx-border-radius: 10px;">
            <Label text="Studi Disponibili:" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            <ListView fx:id="studiosListView" prefHeight="400" style="-fx-background-color: white; -fx-font-size: 16px;"/>
        </VBox>
    </center>

    <!-- Bottom: Pulsante prenota -->
    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 20;">
            <Button fx:id="bookButton" text="Prenota Studio" style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10 20 10 20;"/>
        </HBox>
    </bottom>
</BorderPane>
