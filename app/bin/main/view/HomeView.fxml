<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.studiobooking.controller.HomeController"
            prefWidth="900" prefHeight="700">

    <!-- Top: Benvenuto e pulsanti Login/Register/Logout + Loyalty Card -->
    <top>
        <VBox spacing="10" alignment="CENTER" style="-fx-padding: 20; -fx-background-color: #2c3e50;">
            
            <!-- Benvenuto e pulsanti -->
            <HBox spacing="15" alignment="CENTER">
                <Label fx:id="welcomeLabel" text="Benvenuto su Studio Booking!" 
                       style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;" />
                <Button fx:id="loginButton" text="Login" 
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20;"/>
                <Button fx:id="registerButton" text="Registrati" 
                        style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20;"/>
                <Button fx:id="logoutButton" text="Logout" 
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white;" visible="false"/>
            </HBox>

            <!-- Loyalty Card -->
            <HBox spacing="40" alignment="CENTER" style="-fx-padding: 10; -fx-background-color: #34495e; -fx-background-radius: 10;">
                <Label fx:id="totalBookingsLabel" text="Prenotazioni Totali: 0" 
                       style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>
                <Label fx:id="discountLabel" text="Sconto Attuale: 0%" 
                       style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>
            </HBox>

        </VBox>
    </top>

    <!-- Center: Liste studi e prenotazioni -->
    <center>
        <HBox spacing="20" style="-fx-padding: 20;">
            <!-- Lista studi -->
            <VBox spacing="10" HBox.hgrow="ALWAYS" style="-fx-background-color: #ecf0f1; -fx-padding: 15; -fx-border-color: #bdc3c7; -fx-border-width: 2px; -fx-border-radius: 10px;">
                <Label text="Studi Disponibili:" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                <ListView fx:id="studiosListView" prefWidth="400" prefHeight="500" style="-fx-background-color: white; -fx-font-size: 16px;"/>
            </VBox>

            <!-- Lista prenotazioni utente -->
            <VBox spacing="10" HBox.hgrow="ALWAYS" style="-fx-background-color: #ecf0f1; -fx-padding: 15; -fx-border-color: #bdc3c7; -fx-border-width: 2px; -fx-border-radius: 10px;">
                <Label text="Le Tue Prenotazioni:" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                <ListView fx:id="userBookingsListView" prefWidth="400" prefHeight="500" style="-fx-background-color: white; -fx-font-size: 14px;"/>
            </VBox>
        </HBox>
    </center>

    <!-- Bottom: Pulsanti prenota e annulla -->
    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 20;">
            <Button fx:id="bookButton" text="Prenota Studio"
                    style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10 20;"/>
            <Button fx:id="cancelBookingButton" text="Annulla Prenotazione"
                    style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10 20;"
                    disable="true"/>
        </HBox>
    </bottom>

</BorderPane>