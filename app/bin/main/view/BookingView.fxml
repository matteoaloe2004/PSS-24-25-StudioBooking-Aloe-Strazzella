<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Tooltip?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.studiobooking.controller.BookingController"
      spacing="15" alignment="CENTER" style="-fx-padding: 25; -fx-background-color: #f0f3f5;" prefWidth="450" prefHeight="600">

    <VBox alignment="CENTER" spacing="10">
        <Label fx:id="studioLabel" text="Prenotazione Studio" 
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <Label fx:id="studioDescriptionLabel" text="Sala principale con insonorizzazione professionale" 
               wrapText="true" maxWidth="400" 
               style="-fx-font-size: 14px; -fx-text-fill: #555; -fx-alignment: center;"/>
    </VBox>

    <Separator prefWidth="400"/>

    <VBox alignment="CENTER" spacing="10">
        <Label text="Seleziona il giorno:"/>
        <DatePicker fx:id="datePicker" prefWidth="200"/>

        <Label text="Seleziona la fascia oraria:"/>
        <ComboBox fx:id="timeSlotComboBox" prefWidth="200"/>
    </VBox>

    <Separator prefWidth="400"/>

    <VBox alignment="CENTER" spacing="10">
        <Label text="Scegli un microfono:"/>
        <ComboBox fx:id="microphoneComboBox" prefWidth="250"/>

        <Label text="Scegli una scheda audio:"/>
        <ComboBox fx:id="audioInterfaceComboBox" prefWidth="250"/>

        <Label text="Scegli un monitor:"/>
        <ComboBox fx:id="monitorComboBox" prefWidth="250"/>
    </VBox>

    <HBox spacing="20" alignment="CENTER">
        <Button fx:id="confirmButton" text="Conferma Prenotazione" 
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 8 15 8 15;"/>
        <Button fx:id="backButton" text="Torna alla Home" 
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-weight: bold; -fx-padding: 8 15 8 15;"/>
    </HBox>

</VBox>
