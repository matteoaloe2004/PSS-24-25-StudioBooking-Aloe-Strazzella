<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.studiobooking.controller.LoyaltyCardController"
      spacing="5" style="-fx-background-color: #dfe6e9; -fx-padding: 10; -fx-border-color: #b2bec3; -fx-border-width: 1px; -fx-border-radius: 5px;">
    
    <Label text="Loyalty Card" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    
    <!-- Numero di prenotazioni effettuate -->
    <Label fx:id="loyaltyBookingsLabel" text="Prenotazioni totali: 0" style="-fx-font-size: 16px;"/>
    
    <!-- Sconto attuale della card -->
    <Label fx:id="loyaltyDiscountLabel" text="Sconto: 0%" style="-fx-font-size: 16px;"/>
    
</VBox>
