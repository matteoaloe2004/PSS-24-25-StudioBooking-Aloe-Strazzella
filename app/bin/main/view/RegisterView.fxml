<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.studiobooking.controller.RegisterController" style="-fx-padding: 20;">
    <Label text="Registrazione" style="-fx-font-size: 24px;" />
    <TextField fx:id="nameField" promptText="Nome" />
    
    <TextField fx:id="emailField" promptText="Email" />

    <PasswordField fx:id="passwordField" promptText="Password" />
    <PasswordField fx:id="confirmPasswordField" promptText="Conferma Password" />
    <Button text="Registrati" fx:id="registerButton" />
</VBox>
